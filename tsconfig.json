{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "allowJs": false,
        "moduleResolution": "node",
        "rootDir": ".",
        "lib": ["es2015","esnext.asynciterable", "dom"],
        "outDir": "lib"
    },
    "exclude": [
        "node_modules"
      ],
      "include": [
        "src/**/*",
        "tests/**/*"
      ]
}
